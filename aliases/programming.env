phx() {
    local target="$1"
    local input_level="$2"
    local level=7
    # Check if input_level is a number between 0 and 10
    if [[ "$input_level" =~ ^[0-9]+$ ]] && (( input_level >= 0 && input_level <= 10 )); then
        level="$input_level"
    fi
    phpx analyse --level="$level" "$target"
}
